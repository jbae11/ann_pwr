<simulation>

  <archetypes>
    <spec>
      <lib>agents</lib>
      <name>NullRegion</name>
    </spec>
    <spec>
      <lib>agents</lib>
      <name>NullInst</name>
    </spec>
    <spec>
      <lib>cycamore</lib>
      <name>Sink</name>
    </spec>
    <spec>
      <lib>cycamore</lib>
      <name>Source</name>
    </spec>
<spec>
  <lib>cycamore</lib>
  <name>Enrichment</name>
</spec>
    <spec>
      <lib>ann_lwr.ann_lwr</lib>
      <name>ann_lwr</name>
    </spec>
  </archetypes>

  <control>
    <duration>200</duration>
    <startmonth>1</startmonth>
    <startyear>2000</startyear>
    <decay>manual</decay>
  </control>


  <facility>
    <config>
      <ann_lwr>
        <fuel_incommod>fuel</fuel_incommod>
        <fuel_outcommod>unf</fuel_outcommod>
        <enr_bu_matrix>
            <val>2.1_30000 3.1_30000 3.1_30000 3.1_30000 3.1_30000 4.1_30000 4.1_30000 3.1_30000</val>
            <val>3.1_32000 3.1_34000 3.1_40000 3.1_36000 3.1_39000 4.1_32000 3.5_40000 3.2_36000</val>
            <val>2.1_33000 3.5_34000 3.2_43000 2.8_43100 3.1_28000 4.5_42000 3.1_23555 3.1_30000</val>
        </enr_bu_matrix>
        <assem_size>30000</assem_size>
        <n_assem_core>24</n_assem_core>
        <n_assem_batch>8</n_assem_batch>
        <power_cap>1000</power_cap>
        <cycle_time_eq>18</cycle_time_eq>
        <refuel_time_eq>1</refuel_time_eq>
        <pickle_path>/home/teddy/github/ann_lwr/ann_model.pkl</pickle_path>
      </ann_lwr>
    </config>
    <name>ann_lwr</name>
  </facility>


<facility>
  <name>enrichment</name>
  <config>
    <Enrichment>
      <feed_commod>natl_u</feed_commod>
      <feed_recipe>natl_u</feed_recipe>
      <product_commod>fuel</product_commod>
      <tails_assay>0.003</tails_assay>
      <tails_commod>waste</tails_commod>
      <swu_capacity>1e100</swu_capacity>
      <initial_feed>1e100</initial_feed>
    </Enrichment>
  </config>
</facility>

  <facility>
    <name>sink</name>
    <config>
      <Sink>
        <in_commods><val>unf</val></in_commods>
      </Sink>
    </config>
  </facility>

  
  <facility>
    <name>source</name>
    <config>
      <Source>
        <outcommod>natl_u</outcommod>
      </Source>
    </config>
  </facility>

<region>
    <name>SingleRegion</name>
    <config><NullRegion/></config>
    <institution>
      <name>SingleInstitution</name>
      <initialfacilitylist>

        <entry>
          <prototype>ann_lwr</prototype>
          <number>1</number>
        </entry>

        <entry>
          <prototype>sink</prototype>
          <number>1</number>
        </entry>

        <entry>
          <prototype>source</prototype>
          <number>1</number>
        </entry>

        <entry>
          <prototype>enrichment</prototype>
          <number>1</number>
        </entry>

      </initialfacilitylist>
      <config><NullInst/></config>
    </institution>
  </region>

<recipe>
  <name>fuel_recipe</name>
  <basis>mass</basis>
    <nuclide> <id>U-235</id> <comp>3</comp> </nuclide>
    <nuclide> <id>U-238</id> <comp>97</comp> </nuclide>
</recipe>

<recipe>
  <name>natl_u</name>
  <basis>mass</basis>
  <nuclide>
    <id>U-235</id>
    <comp>0.7</comp>
  </nuclide>
  <nuclide>
    <id>U-238</id>
    <comp>99.3</comp>
  </nuclide>
</recipe>

</simulation>



