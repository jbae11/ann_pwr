<simulation>

  <archetypes>
    <spec>
      <lib>agents</lib>
      <name>NullRegion</name>
    </spec>
    <spec>
      <lib>agents</lib>
      <name>NullInst</name>
    </spec>
    <spec>
      <lib>cycamore</lib>
      <name>Sink</name>
    </spec>
    <spec>
      <lib>cycamore</lib>
      <name>Source</name>
    </spec>
    <spec>
      <lib>ann_lwr.ann_lwr</lib>
      <name>ann_lwr</name>
    </spec>
  </archetypes>

  <control>
    <duration>100</duration>
    <startmonth>1</startmonth>
    <startyear>2000</startyear>
    <decay>manual</decay>
  </control>

  <facility>
    <config>
      <ann_lwr>
        <fuel_incommod>fuel</fuel_incommod>
        <fuel_outcommod>unf</fuel_outcommod>
        <burnup_list>
            <val>20</val>
            <val>40</val>
            <val>60</val>
        </burnup_list>
        <enrichment_list>
            <val>2.0</val>
            <val>2.5</val>
            <val>3.2</val>
        </enrichment_list>
        <n_batch>3</n_batch>
        <batch_mass>30000</batch_mass>
        <power_cap>1000</power_cap>
        <cycle_time>18</cycle_time>
        <refuel_time>1</refuel_time>
        <pickle_path>/home/teddy/github/saltproc_reactor/db/ann_model.pkl</pickle_path>
      </ann_lwr>
    </config>
    <name>ann_lwr</name>
  </facility>

  <facility>
    <name>sink</name>
    <config>
      <Sink>
        <in_commods><val>unf</val></in_commods>
        <capacity>1e100</capacity>
      </Sink>
    </config>
  </facility>

  
  <facility>
    <name>source</name>
    <config>
      <Source>
        <outcommod>fuel</outcommod>
      </Source>
    </config>
  </facility>

<region>
    <name>SingleRegion</name>
    <config><NullRegion/></config>
    <institution>
      <name>SingleInstitution</name>
      <initialfacilitylist>

        <entry>
          <prototype>ann_lwr</prototype>
          <number>1</number>
        </entry>

        <entry>
          <prototype>sink</prototype>
          <number>1</number>
        </entry>

        <entry>
          <prototype>source</prototype>
          <number>1</number>
        </entry>

      </initialfacilitylist>
      <config><NullInst/></config>
    </institution>
  </region>

<recipe>
  <name>fuel_recipe</name>
  <basis>mass</basis>
    <nuclide> <id>U-235</id> <comp>3</comp> </nuclide>
    <nuclide> <id>U-238</id> <comp>97</comp> </nuclide>
</recipe>

</simulation>



